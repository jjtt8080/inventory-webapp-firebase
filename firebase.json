{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "public": "public",
    "rewrites" : [
      {
        "source": "/verifyToken",
        "function": "verifyToken"
      },
      {
        "source": "/getProducts",
        "function": "getProducts"
      },
      {
        "source": "/getCompany",
        "function": "getCompany"
      },
      {
        "source": "/setCompany",
        "function": "setCompany"
      },
      {
        "source": "/getUser",
        "function": "getUser"
      },
      {
        "source": "/createUser",
        "function": "createUser"
      }
    ],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  },
  "database": {
    "rules": "database.rules.json"
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ],
    "source": "functions"
  },
  "storage": {
    "rules": "storage.rules"
  }
}
